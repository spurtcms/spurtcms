type Category{
	id:                 Int!
	categoryName:       String!
	categorySlug:       String!
	description:        String!
	imagePath:          String!
	createdOn:          Time!
	createdBy:          Int!
	modifiedOn:         Time 
	modifiedBy:         Int       
	parentId:           Int!
	tenantId:           String!
}

type CategoryDetails{
	categorylist: [Category!]!
	count:        Int!
}

type GeneralInfo{
	companyName:String!
	logoPath:String!
	expandLogoPath:String!
	tenantId:String!
}

extend type Query{
	CategoryList(categoryFilter: CategoryFilter,commonFilter: Filter): CategoryDetails! @auth
	GeneralInformation(tenantId:String):GeneralInfo! @auth
}

input CategoryFilter{
	categoryGroupId:      Int
	hierarchyLevel:       Int
	excludeGroup:         Boolean
	excludeParent:        Boolean
	exactLevelOnly:       Boolean
	checkEntriesPresence: Boolean
	categoryGroupSlug:    String
	channelSlug:          String
}


